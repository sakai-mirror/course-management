<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping default-cascade="none" package="org.sakaiproject.coursemanagement.impl">

    <class name="org.sakaiproject.coursemanagement.impl.AcademicSessionImpl"
        table="CM_ACADEMIC_SESSION_T">

        <id name="key" column="ACADEMIC_SESSION_ID" type="long">
            <generator class="native">
                <param name="sequence">CM_ACADEMIC_SESSION_S</param>
            </generator>
        </id>

        <version name="version" type="integer" column="VERSION"/>

        <property name="eid" column="ENTERPRISE_ID" type="string" unique="true" not-null="true" />
        <property name="title" column="TITLE" type="string" not-null="true" />
        <property name="description" column="DESCRIPTION" type="string" not-null="true" />

    </class>
    
    <query name="findAcademicSessions">
        <![CDATA[
        from AcademicSessionImpl as term
        ]]>
    </query>

    <query name="findAcademicSessionByEid">
        <![CDATA[
        from AcademicSessionImpl as term where term.eid=:eid
        ]]>
    </query>

</hibernate-mapping>
