<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping default-cascade="none" package="org.sakaiproject.coursemanagement.impl">

	<class name="org.sakaiproject.coursemanagement.impl.CourseSetImpl" table="CM_COURSE_SET_T">

		<id name="key" column="COURSE_SET_ID" type="long">
			<generator class="native">
				<param name="sequence">CM_COURSE_SET_S</param>
			</generator>
		</id>

		<version name="version" type="integer" column="VERSION" />

		<property name="eid" column="ENTERPRISE_ID" type="string" unique="true" not-null="true" />
		<property name="title" column="TITLE" type="string" not-null="true" />
		<property name="description" column="DESCRIPTION" type="string" not-null="true" />

		<many-to-one name="parent" column="PARENT_COURSE_SET" class="org.sakaiproject.coursemanagement.impl.CourseSetImpl" />

		<set name="courseOfferings" table="CM_COURSE_SET_OFFERING_ASSOC_T" lazy="true" inverse="false">
			<key column="COURSE_SET" />
			<many-to-many class="org.sakaiproject.coursemanagement.impl.CourseOfferingImpl" column="COURSE_OFFERING" />
		</set>

	</class>

    <query name="findCourseSetById">
        <![CDATA[
        from CourseSetImpl as courseSet where courseSet.id=:id
        ]]>
    </query>

</hibernate-mapping>
