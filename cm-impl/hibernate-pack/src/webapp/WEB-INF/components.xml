<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springkernel.org/dtd/spring-beans.dtd">

<beans>

	<bean id="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl.coursemanagement"
		class="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl">
		<property name="mappingResources">
			<list>
                <value>org/sakaiproject/coursemanagement/impl/AcademicSessionImpl.hbm.xml</value>
                <value>org/sakaiproject/coursemanagement/impl/MembershipContainer.hbm.xml</value>
                <value>org/sakaiproject/coursemanagement/impl/CanonicalCourseImpl.hbm.xml</value>
                <value>org/sakaiproject/coursemanagement/impl/CourseOfferingImpl.hbm.xml</value>
                <value>org/sakaiproject/coursemanagement/impl/CourseSetImpl.hbm.xml</value>
                <value>org/sakaiproject/coursemanagement/impl/CrossListing.hbm.xml</value>
                <value>org/sakaiproject/coursemanagement/impl/EnrollmentImpl.hbm.xml</value>
                <value>org/sakaiproject/coursemanagement/impl/EnrollmentSetImpl.hbm.xml</value>
                <value>org/sakaiproject/coursemanagement/impl/MembershipImpl.hbm.xml</value>
                <value>org/sakaiproject/coursemanagement/impl/SectionImpl.hbm.xml</value>
			</list>
		</property>
	</bean>

	<bean id="org.sakaiproject.coursemanagement.api.CourseManagementService"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
		</property>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
        <property name="target">
            <bean class="org.sakaiproject.coursemanagement.impl.CourseManagementServiceHibernateImpl">
        		<property name="sessionFactory">
	        		<ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
				</property>
            </bean>
        </property>
	</bean>

	<bean id="org.sakaiproject.coursemanagement.api.CourseManagementAdministration"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
		</property>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
        <property name="target">
            <bean class="org.sakaiproject.coursemanagement.impl.CourseManagementAdministrationHibernateImpl">
        		<property name="sessionFactory">
	        		<ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
				</property>
	        	<property name="cmService">
	        		<ref bean="org.sakaiproject.coursemanagement.api.CourseManagementService"/>
	        	</property>
            </bean>
        </property>
	</bean>

</beans>

