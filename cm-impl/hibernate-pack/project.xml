<?xml version="1.0" encoding="UTF-8"?>

<project>
    <pomVersion>3</pomVersion>
    <extend>../../../master/project.xml</extend>
    <name>Sakai Coursemanagement Hibernate Component Package</name>
    <groupId>sakaiproject</groupId>
    <id>sakai-coursemanagement-hib-pack</id>
	<currentVersion>${sakai.version}</currentVersion>
    <organization>
        <name>Sakai Project</name>
        <url>http://sakaiproject.org/</url>
    </organization>
    <inceptionYear>2004</inceptionYear>

	<properties>
		<!-- Deploy one components package only -->
		<deploy.type>components</deploy.type>
	</properties>

    <dependencies>

  		<!--
  		We are putting the impl in the shared classloader for now.  We anticipate
  		that the impl will be replaced for many institutions, anyhow.
  		 -->
      
        <dependency>
        	<groupId>sakaiproject</groupId>
	        <artifactId>sakai-coursemanagement-hibernate</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<deploy.target>shared</deploy.target>
			</properties>
	    </dependency>
  		
    </dependencies>

    <build>
      <sourceDirectory>src/java</sourceDirectory>
    </build>
</project>
